<% layout('../../layouts/layout.ejs') -%>
<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.7/css/select2.min.css" rel="stylesheet" />
<style>
    .modal-footer {
        display: initial
    }
</style>
<p id="code" class="hide"> <%= code %></p>
<div class="container-fluid" ng-controller="detailController">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header card-header-primary">
                    <h4 class="card-title">Customer Profile</h4>
                </div>
                <div class="card-body">
                    <form>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="bmd-label-floating">Fullname</label>
                                    <input type="text" class="form-control" ng-model="customer.name" id="fullname"
                                        value="{{customer.name}} " ng-disabled="isNotEditing">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="bmd-label-floating">Phone</label>
                                    <input type="text" class="form-control numberInput" ng-model="customer.phone"
                                        value="{{customer.phone}} " ng-disabled="true">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="bmd-label-floating">Gender</label>
                                    <input type="text" class="form-control" value=" " ng-hide="true">
                                    <select style="width: 100%;" class="form-control select2-single"
                                        ng-model="customer.gender" ng-disabled="isNotEditing">
                                        <option value="Male">Male</option>
                                        <option value="Female">Female</option>
                                        <option value="Other">Other</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="bmd-label-floating">Birthdate</label>
                                    <input type="text" class="form-control" name="birthdate" id="birthdate"
                                        value="{{customer.dateOfBirth | date:'dd/MM/yyyy'}}" ng-disabled="isNotEditing">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="bmd-label-floating">Email address</label>
                                    <input type="text" class="form-control" ng-model="customer.email"
                                        value="{{customer.email}} " ng-disabled="isNotEditing">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="bmd-label-floating">Role</label>
                                    <input type="text" class="form-control" value=" " ng-hide="true">
                                    <select style="width: 100%;" class="form-control select2-single"
                                        ng-model="customer.role" id="role" ng-disabled="isNotEditing">
                                        <option value="Customer">Customer</option>
                                        <option value="Manager">Manager</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="bmd-label-floating">Address</label>
                                    <input type="text" class="form-control" ng-model="customer.address"
                                        value="{{customer.address}} " ng-disabled="isNotEditing">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="note">Note</label>
                                    <textarea type="text" rows="3" class="form-control" ng-model="customer.note"
                                        ng-disabled="isNotEditing" id="note"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card card-profile">
                <div class="card-avatar" onclick="showModalChangeAvatar()">
                    <a href="">
                        <img class="img" src="{{customer.photoURL || '/images/logo.png'}}" />
                    </a>
                </div>
                <div class="card-body">
                    <h6 class="card-category text-gray">Customer</h6>
                    <h4 class="card-title">{{customer.name}}</h4>
                </div>
            </div>
            <button ng-click="getRoom()" type="submit" class="btn btn-primary pull-left" data-toggle="modal"
                data-target="#addRoomModel">Add Room</button>

        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header card-header-primary">
                    <div class="row">
                        <div class="col-md-8">
                            <h4 class="card-title" style="line-height: 50px">Room List</h4>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table" id="rooms-table">
                            <thead class=" text-primary">
                                <th style="width: 10%">Number</th>
                                <th style="width: 30%">Apartment</th>
                                <th style="width: 15%">Sign Date</th>
                                <th style="width: 15%">Expired Date</th>
                            </thead>
                            <tbody>
                                <tr ng-repeat="room in roomsForCustomer">
                                    <td>
                                        <a href="/room/{{room.code}}">
                                            {{room.roomNumber}}
                                        </a>
                                    </td>
                                    <td>
                                        <a href="/room/{{room.code}}">
                                            {{room.apartment.name}}
                                        </a>
                                    </td>
                                    <td data-order="{{room.signDate}}">
                                        <a href="/room/{{room.code}}">
                                            {{room.signDate == 0 ? 'N/A' : room.signDate | date:'dd/MM/yyyy HH:mm:ss'}}
                                        </a>
                                    </td>
                                    <td data-order="{{room.expiredDate}}">
                                        <a href="/room/{{room.code}}">
                                            {{room.expiredDate == 0 ? 'N/A' : room.expiredDate | date:'dd/MM/yyyy HH:mm:ss'}}
                                        </a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade model-center" id="addRoomModel" role="dialog" aria-labelledby="addRoomModelLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title" id="addRoomModelLabel" data-color="purple">Add New Room</h3>
                    <button type="button" class="close btn-close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row" style="display: flex">
                        <div class="col-md-6" style="margin: 0 auto;">
                            <div class="form-group">
                                <select style="width: 100%" class="form-control" name="selected-room" id="selected-room"
                                    ng-model="selectedRoom">
                                    <option ng-disabled="room.user" ng-repeat="room in rooms" value="{{room._id}}">
                                        {{room.user ? room.roomNumber  + ' - ' + room.user.name : room.roomNumber}}
                                    </option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger pull-left" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary pull-right" ng-click="addRoomForUser()">Add</button>
                </div>
            </div>
        </div>
    </div>
    <% include ../../modal/change-avatar %>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.7/js/select2.min.js"></script>
<script src="/javascripts/manager/user/detail.js"></script>
<script>
    clickSideBar('user-page')
    $(document).ready(function () {
        $('#birthdate').datepicker({
            dateFormat: 'dd/mm/yy',
            autoclose: true,
            changeMonth: true,
            changeYear: true,
            yearRange: '-100:' + new Date().getFullYear()
        })
        $('#selected-apartment').select2({
            placeholder: 'Select a apartment'
        });
        $('#selected-room').select2({
            placeholder: 'Select a room'
        });
        $('.select2-single').select2()
        setTimeout(() => {
            numberFormat()
        }, 200);
    });
</script>