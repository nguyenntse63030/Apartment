<% layout('../../layouts/layout.ejs') -%>
<div class="container-fluid" ng-controller="listController">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header-primary">
                    <h4 class="card-title ">Customer List</h4>
                    <p class="card-category"></p>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table" id="user-list-table">
                            <thead class=" text-primary">
                                <th>Name</th>
                                <th>Phone</th>
                                <th>Email</th>
                                <th>Address</th>
                                <th>Created Time</th>
                            </thead>
                            <tbody>
                                <tr ng-repeat="customer in customers">
                                    <td>
                                        <a href="/admin/customer/{{customer.code}}">
                                            {{customer.name}}
                                        </a>
                                    </td>
                                    <td>
                                        <a href="/admin/customer/{{customer.code}}">
                                            {{customer.phone}}
                                        </a>
                                    </td>
                                    <td>
                                        <a href="/admin/customer/{{customer.code}}">
                                            {{customer.email}}
                                        </a>
                                    </td>
                                    <td>
                                        <a href="/admin/customer/{{customer.code}}">
                                            {{customer.email}}
                                        </a>
                                    </td>
                                    <td>
                                        <a href="/admin/customer/{{customer.code}}">
                                            {{customer.createdTime}}
                                        </a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/javascripts/admin/customer/list.js"></script>
<script>
    clickSideBar('user-page')
</script>