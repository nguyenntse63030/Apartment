<% layout('../../layouts/layout.ejs') -%>
<style>
    #user-list-table_previous,
    #user-list-table_next{
        color: #9c27b0 !important
    }
</style>
<div class="container-fluid" ng-controller="listController">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header-primary">
                    <h4 class="card-title ">Customer List</h4>
                    <p class="card-category"></p>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table" id="user-list-table">
                            <thead class=" text-primary">
                                <th style="width: 10%">Name</th>
                                <th style="width: 10%">Phone</th>
                                <th style="width: 10%">Email</th>
                                <th style="width: 10%">Address</th>
                                <th style="width: 10%">Created Time</th>
                            </thead>
                            <tbody>
                                <tr ng-repeat="customer in customers">
                                    <td>
                                        <a href="/admin/customer/{{customer.code}}">
                                            {{customer.name}}
                                        </a>
                                    </td>
                                    <td>
                                        <a href="/admin/customer/{{customer.code}}">
                                            {{customer.phone}}
                                        </a>
                                    </td>
                                    <td>
                                        <a href="/admin/customer/{{customer.code}}">
                                            {{customer.email}}
                                        </a>
                                    </td>
                                    <td>
                                        <a href="/admin/customer/{{customer.code}}">
                                            {{customer.email}}
                                        </a>
                                    </td>
                                    <td data-order="customer.createdTime">
                                        <a href="/admin/customer/{{customer.code}}">
                                            {{customer.createdTime | date:'dd/MM/yyyy HH:mm:ss'}}
                                        </a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/javascripts/admin/customer/list.js"></script>
<script>
    clickSideBar('user-page')
</script>