<% layout('../../layouts/layout.ejs') -%>
<style>
    #user-list-table_previous,
    #user-list-table_next {
        color: #9c27b0 !important
    }
</style>
<div class="container-fluid" ng-controller="listController">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header-primary">
                    <h4 class="card-title ">Room List</h4>
                    <p class="card-category"></p>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table" id="rooms-table">
                            <thead class=" text-primary">
                                <th style="width: 10%">Number</th>
                                <th style="width: 20%">Owner</th>
                                <th style="width: 30%">Apartment</th>
                                <th style="width: 15%">Sign Date</th>
                                <th style="width: 15%">Expired Date</th>
                            </thead>
                            <tbody>
                                <tr ng-repeat="room in rooms">
                                    <td>
                                        <a href="/room/{{room.code}}">
                                            {{room.Number}}
                                        </a>
                                    </td>
                                    <td>
                                        <a href="/room/{{room.code}}">
                                            {{room.user.name}}
                                        </a>
                                    </td>
                                    <td>
                                        <a href="/room/{{room.code}}">
                                            {{room.apartment.name}}
                                        </a>
                                    </td>
                                    <td data-order="room.signDate">
                                        <a href="/room/{{room.code}}">
                                            {{room.signDate | date:'dd/MM/yyyy HH:mm:ss'}}
                                        </a>
                                    </td>
                                    <td data-order="room.expiredDate">
                                        <a href="/room/{{room.code}}">
                                            {{room.expiredDate | date:'dd/MM/yyyy HH:mm:ss'}}
                                        </a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/javascripts/supervisor/room/list.js"></script>
<script>
    clickSideBar('room-page')
</script>